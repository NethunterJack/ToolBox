<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#ffffff" 
    >
    <ScrollView 
	    android:background="#ffffff" 
	    android:layout_width="fill_parent" 
	    android:layout_height="0.0px" 
	    android:layout_weight="1.0"
	    >
	    <LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:orientation="vertical"
		    >
		    <TextView 
		      android:layout_width="fill_parent"
			  android:layout_height="wrap_content" 
			  android:layout_marginLeft="14.0dip" 
		      android:layout_marginTop="7.0dip" 
		      android:layout_marginBottom="7.0dip" 
		      android:textColor="@color/traffic_txt"
			  android:text="SIM卡信息"
			  />
		    <TableLayout 
		        android:id="@+id/sim_layout"
			    android:background="@drawable/mobile_item_shape"
				android:paddingLeft="6.0dip" 
				android:paddingTop="5.0dip"
				android:paddingRight="6.0dip" 
				android:paddingBottom="5.0dip"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:layout_marginLeft="8.0dip" 
				android:layout_marginTop="0.0dip"
				android:layout_marginRight="8.0dip" 
				android:layout_marginBottom="9.0dip"
		 		>
			<TableRow>
				<TextView 
				    android:id="@+id/imsi"
				    android:textSize="14.0sp" 
				    android:textColor="@color/traffic_txt"
					android:padding="5.0dip" 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" 
					android:text="IMSI码"
					android:layout_weight="1.0" 
					/>
				<TextView 
				    android:id="@+id/imsi_tx"
				    android:textSize="14.0sp" 
				    android:textColor="@color/traffic_data"
					android:padding="5.0dip" 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" 
					android:layout_weight="1.0" 
					/>
			</TableRow>
			<TableRow>
				<TextView
				    android:id="@+id/imei" 
				    android:textSize="14.0sp" 
				    android:textColor="@color/traffic_txt"
					android:padding="5.0dip" 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" 
					android:text="IMEI码"
					android:layout_weight="1.0" 
					/>
				<TextView 
				    android:id="@+id/imei_tx"
				    android:textSize="14.0sp" 
				    android:textColor="@color/traffic_data"
					android:padding="5.0dip" 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" 
					android:layout_weight="1.0" 
					/>
			</TableRow>
			<TableRow>
				<TextView 
				    android:id="@+id/iso"
				    android:textSize="14.0sp" 
				    android:textColor="@color/traffic_txt"
					android:padding="5.0dip" 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" 
					android:text="ISO国家码"
					android:layout_weight="1.0" 
					/>
				<TextView 
					android:id="@+id/iso_tx" 
					android:textSize="14.0sp" 
					android:textColor="@color/traffic_data"
					android:padding="5.0dip" 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" 
					android:layout_weight="1.0" 
					/>
			</TableRow>
			<TableRow>
				<TextView 
					android:id="@+id/state" 
					android:textSize="14.0sp" 
					android:textColor="@color/traffic_txt"
					android:padding="5.0dip" 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" 
					android:text="SIM的状态"
					android:layout_weight="1.0" 
					/>
				<TextView 
					android:id="@+id/state_tx" 
					android:textSize="14.0sp" 
					android:textColor="@color/traffic_data"
					android:padding="5.0dip" 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" 
					android:layout_weight="1.0" 
					/>
			</TableRow>
			<TableRow>
				<TextView 
					android:id="@+id/operator" 
					android:textSize="14.0sp" 
					android:textColor="@color/traffic_txt"
					android:padding="5.0dip" 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" 
					android:text="服务商名称"
					android:layout_weight="1.0" 
					/>
				<TextView 
					android:id="@+id/operator_name" 
					android:textSize="14.0sp" 
					android:textColor="@color/traffic_data"
					android:padding="5.0dip" 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" 
					android:layout_weight="1.0" 
					/>
			</TableRow>
		 </TableLayout>
	     <TextView 
		      android:layout_width="fill_parent"
			  android:layout_height="wrap_content" 
			  android:layout_marginLeft="14.0dip" 
		      android:layout_marginTop="7.0dip" 
		      android:layout_marginBottom="7.0dip" 
			  android:text="手机相关信息"
			  android:textColor="@color/traffic_txt"
			  />
		<TableLayout 
			    android:background="@drawable/mobile_item_shape"
				android:paddingLeft="6.0dip" 
				android:paddingTop="5.0dip"
				android:paddingRight="6.0dip" 
				android:paddingBottom="5.0dip"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:layout_marginLeft="8.0dip" 
				android:layout_marginTop="0.0dip"
				android:layout_marginRight="8.0dip" 
				android:layout_marginBottom="9.0dip"
		 		>
			<TableRow>
				<TextView 
				    android:id="@+id/type"
				    android:textSize="14.0sp" 
				    android:textColor="@color/traffic_txt"
					android:padding="5.0dip" 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" 
					android:text="手机类型"
					android:layout_weight="1.0" 
					/>
				<TextView 
				    android:id="@+id/type_tx"
				    android:textSize="14.0sp" 
				    android:textColor="@color/traffic_data"
					android:padding="5.0dip" 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" 
					android:layout_weight="1.0" 
					/>
			</TableRow>
			<TableRow>
				<TextView
				    android:id="@+id/device_soft" 
				    android:textSize="14.0sp" 
				    android:textColor="@color/traffic_txt"
					android:padding="5.0dip" 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" 
					android:text="手机软件版本号"
					android:layout_weight="1.0" 
					/>
				<TextView 
				    android:id="@+id/device_soft_tx"
				    android:textSize="14.0sp" 
				    android:textColor="@color/traffic_data"
					android:padding="5.0dip" 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" 
					android:layout_weight="1.0" 
					/>
			</TableRow>
			<TableRow>
				<TextView 
				    android:id="@+id/device_id"
				    android:textSize="14.0sp" 
				    android:textColor="@color/traffic_txt"
					android:padding="5.0dip" 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" 
					android:text="手机设备的ID"
					android:layout_weight="1.0" 
					/>
				<TextView 
					android:id="@+id/device_id_tx" 
					android:textSize="14.0sp" 
					android:textColor="@color/traffic_data"
					android:padding="5.0dip" 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" 
					android:layout_weight="1.0" 
					/>
			</TableRow>
		 </TableLayout>
       </LinearLayout>
    </ScrollView> 
</LinearLayout>